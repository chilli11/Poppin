<div class="row">
	<div class="col-md-6">
		<div class="card">
			<div class="card-header card-header-primary">
				<h4 class="card-title">{{if this.isUpdate 'Update' 'Add'}} Category</h4>
			</div>
			<div class="card-body">
				<BsForm @formLayout="horizontal" @model={{this}} @onSubmit={{fn this.addOrUpdateCategory}} as |form|>
					<div class="form-row">
						<form.element class="col" @controlType="text" @label="Name" @placeholder="Name" @property="name" @required={{true}} />
						<form.element class="col" @controlType="text" @label="Slug" @placeholder="Slug" @property="slug" @required={{true}} />
					</div>
					<div class="form-row">
						<form.group class="col">
							<label class="col-form-label col-md-4">Parent</label>
							<div class="col-md-8">
								<PowerSelect
									@searchEnabled={{true}}
									@options={{this.model}}
									@placeholder="Search..."
									@searchField="name"
									@selected={{this.parent}}
									@onChange={{fn (mut this.parent)}} as |cat|>
									{{cat.name}}
								</PowerSelect>
							</div>
						</form.group>
						<form.element class="col" @controlType="text" @label="HERE ID" @placeholder="HERE ID" @property="hereId" />
					</div>
					<form.group>
						<label class="col-form-label col-md-4">Related</label>
						<div class="col-md-8">
							<PowerSelectMultiple
								@searchEnabled={{true}}
								@options={{this.model}}
								@placeholder="Search..."
								@searchField="name"
								@selected={{this.related}}
								@onChange={{fn (mut this.related)}} as |cat|>
								{{cat.name}}
							</PowerSelectMultiple>
						</div>
					</form.group>
					<form.group>
						<label class="col-form-label col-md-4">Chilren</label>
						<div class="col-md-8">
							<PowerSelectMultiple
								@searchEnabled={{true}}
								@options={{this.model}}
								@placeholder="Search..."
								@searchField="name"
								@selected={{this.children}}
								@onChange={{fn (mut this.children)}} as |cat|>
								{{cat.name}}
							</PowerSelectMultiple>
						</div>
					</form.group>
					{{#if this.isUpdate}}
						<BsButton @type="default-outline" {{on 'click' this.clearForm}} @defaultText="clear" />
					{{/if}}
					<BsButton @type="primary" type="submit" @defaultText="Submit" />
				</BsForm>
			</div>
		</div>
	</div>
	<div class="col-md-6">
		<Categories::CategoryList
			@categories={{this.model}}
			@clickAction={{this.clickAction}} />
	</div>
</div>