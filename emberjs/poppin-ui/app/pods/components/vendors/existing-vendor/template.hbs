<div class="col-md-6">
	{{#if (eq this.machineState 'IDLE')}}
		<Vendors::VendorDisplay
			@vendor={{@vendor}}
			@startEdit={{this.startEdit}}
			@refresh={{@refresh}} />
	{{else if (eq this.machineState 'EDIT_LOCATION')}}
		<Vendors::VendorForm
			@vendor={{@vendor}}
			@resolveAction={{this.endEdit}} />
	{{/if}}
	<UsersList
		@title="Admins"
		@users={{@vendor.admins}} />
	<UsersList
		@title="Members"
		@users={{@vendor.members}} />
</div>

<div class="col-md-6">
	<div class="card">
		<div class="card-header card-header-primary">
			<h4 class="card-title">Locations</h4>
		</div>
		<div class="card-body">
			<Locations::LocationList
				@title="Locations"
				@locations={{@vendor.locations}} />
		</div>
	</div>
</div>
