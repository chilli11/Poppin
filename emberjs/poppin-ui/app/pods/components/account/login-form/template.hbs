<div class="col-xl-6">
	<div class="card">
		<div class="card-header card-header-primary">
			<h4 class="card-title">Log In</h4>
			<p class="card-category">
				<a href="javascript:void(0);" {{on "click" this.clearForm}}>Clear Form</a>
			</p>
		</div>
		<div class="card-body">
			<BsAlert
				@visible={{showMsg}}
				@fade={{true}}
				@type={{msgType}}
				@dismissible={{true}}
				@onDismissed={{fn this.hideMsg}}>
				{{#each this.msgs as |msg|}}
					<p>{{msg}}</p>
				{{/each}}
			</BsAlert>
			<BsForm @formLayout="horizontal" @model={{this}} @onSubmit={{fn this.submit}} as |form|>
				<form.element
					@controlType="email"
					@label="Email Address"
					@placeholder="xxxxxxxxxxx@xxxxx.xx"
					@property="email"
					@required={{true}} />
				<form.element
					@controlType="password"
					@label="Password"
					@placeholder="********"
					@property="password"
					@required={{true}}/>
				<BsButton @type="primary" type="submit" @defaultText="Submit" />
			</BsForm>
			<div class="fb-login-button"
				data-size="medium"
				data-button-type="login_with"
				data-layout="rounded"
				data-auto-logout-link="false"
				data-use-continue-as="false"
				data-onlogin="checkFBLoginState();"
				data-width=""></div>
			{{!-- <fb:login-button 
				scope="public_profile,email"
				onlogin="checkFBLoginState();">
			</fb:login-button> --}}
			Don't have an account? <LinkTo @route="account.register">Sign up</LinkTo>.
		</div>
	</div>
</div>