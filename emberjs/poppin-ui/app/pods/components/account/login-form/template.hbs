<div class="col-lg-12">
	<div class="card">
		<div class="card-header card-header-primary">
			<h4 class="card-title">Log In</h4>
			<p class="card-category">
				<a href="javascript:void(0);" {{on "click" this.clearForm}}>Clear Form</a>
			</p>
		</div>
		<div class="card-body">
			<BsAlert
				@visible={{showMsg}}
				@fade={{true}}
				@type={{msgType}}
				@dismissible={{true}}
				@onDismissed={{fn this.hideMsg}}>
				{{#each this.msgs as |msg|}}
					<p>{{msg}}</p>
				{{/each}}
			</BsAlert>
			<LoadingSpinner @isLoading={{this.isLoading}}>
				<BsForm @formLayout="horizontal" @model={{this}} @onSubmit={{fn this.submit}} as |form|>
					<form.element
						@controlType="email"
						@label="Email Address"
						@placeholder="xxxxxxxxxxx@xxxxx.xx"
						@property="email"
						@required={{true}} />
					<form.element
						@controlType="password"
						@label="Password"
						@placeholder="********"
						@property="password"
						@required={{true}}/>
					<BsButton @type="primary" type="submit" @defaultText="Submit" />
				</BsForm>
			</LoadingSpinner>
			{{!-- <hr>
			<h5>Social Login</h5>
			<fb:login-button 
				scope="public_profile,email"
				onlogin="checkFBLoginState();">
			</fb:login-button> --}}
			<hr>
			Don't have an account? <LinkTo @route="account.register" @class="btn btn-primary btn-sm">Sign up</LinkTo>.
		</div>
	</div>
</div>