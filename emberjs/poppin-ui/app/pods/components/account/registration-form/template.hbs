<div class="col-md-6">
	<div class="card">
		<div class="card-header card-header-primary">
			<h4 class="card-title">Sign Up</h4>
			<p class="card-category">
				<a href="javascript:void(0);" {{on "click" this.clearForm}}>Clear Form</a>
			</p>
		</div>
		<div class="card-body">
			<BsAlert
				@visible={{showMsg}}
				@fade={{true}}
				@type={{msgType}}
				@dismissible={{true}}
				@onDismissed={{fn this.hideMsg}}>
				{{#each this.msgs as |msg|}}
					<p>{{msg}}</p>
				{{/each}}
			</BsAlert>
			<LoadingSpinner @isLoading={{this.isLoading}}>
				<BsForm @formLayout="horizontal" @model={{this}} @onSubmit={{fn this.submit}} as |form|>
					<form.element
						@controlType="email"
						@label="Email Address"
						@placeholder="xxxxxxxxxxx@xxxxx.xx"
						@property="email"
						@required={{true}} />
					<form.element
						@controlType="password"
						@label="Password"
						@placeholder="********"
						@property="password"
						@required={{true}}/>
					<form.element
						@controlType="password"
						@label="Confirm Password"
						@placeholder="********"
						@property="password2"
						@required={{true}} />
					<BsButton @type="primary" type="submit" @defaultText="Submit" />
				</BsForm>
			</LoadingSpinner>
			<hr>
			Already have an account? <LinkTo @route="account.login" @class="btn btn-primary btn-sm">Sign in</LinkTo>.
		</div>
	</div>
</div>