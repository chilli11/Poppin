<div class="{{unless @stacked 'col-lg-6'}}">
	<div class="card">
		<div class="card-header card-header-primary">
			<h4 class="card-title">Search Poppin</h4>
		</div>
		<div class="card-body">
			<LoadingSpinner @isLoading={{this.isLoading}}>
				<Locations::NativeSearchForm
					@searchMethod={{this.searchMethod}}
					@populateResults={{this.populateResults}} />
			</LoadingSpinner>
		</div>
	</div>
</div>
<div class="{{unless @stacked 'col-lg-6'}}">
	<div class="card">
		<div class="card-header card-header-primary">
			<h4 class="card-title">Search Results</h4>
			<p class="card-category">
				Choose a business {{#if this.results.total}}({{this.results.total}} Result(s)){{/if}}
			</p>
		</div>
		<div class="card-body location-list">
			<Locations::LocationList
				@offset={{this.offset}}
				@more={{this.more}}
				@vendorId={{@vendorId}}
				@locations={{this.businesses}}
				@getNextPage={{this.getNextPage}}
				@getPrevPage={{this.getPrevPage}}
				@joinCategories={{this.joinCategories}}
				@clickAction={{@clickAction}} />
		</div>
	</div>
</div>