<div class="col-xl-4">
	<div class="card">
		<div class="card-header card-header-primary">
			<h4 class="card-title">{{@location.name}}</h4>
			<p class="address">{{@location.address.line1}} // {{@location.address.city}}, {{@location.address.state}}</p>
			<p>
				{{#if (or @isAdmin @isVendor)}}
					<a href="javascript:void(0)" class="text-dark" {{on "click" @startEdit}}>Edit</a> // 
				{{/if}}
				<a href="javascript:void(0)" class="text-dark" {{on 'click' @favAction}}>{{if @isFavorite 'Unpin' 'Pin Location'}}</a>
			</p>
		</div>
		<div class="card-body">
			<LoadingSpinner @isLoading={{@isLoading}}>
				{{#if (or @isAdmin @isVendor)}}
					<div>
						<h3>
							<button {{on 'click' @decrement}}>-</button>
							{{@location.crowdSize}}
							<button {{on 'click' @increment}}>+</button>
						</h3>
					</div>
				{{/if}}
				<dl>
					<dt>Occupancy</dt>
					<dd>{{@location.capacity}}</dd>
					<dt>Categories:</dt>
					{{#each @categories as |category|}}
						<dd>{{category.name}}</dd>
					{{/each}}
					<dt>Visit Length:</dt>
					<dd>{{@location.visitLength}}</dd>
				</dl>
			</LoadingSpinner>
		</div>
	</div>
</div>

<div class="col-xl-8">
	<div class="card">
		<div class="card-header card-header-primary">
			<h4 class="card-title">Yelp Details {{unless @location.yelpDetails '(unavailable...check back later)'}}</h4>
		</div>
		<div class="card-body"> 
			<iframe style="width: 100%; height: 100vh;" src={{@location.yelpDetails.url}} />
		</div>
	</div>
</div>