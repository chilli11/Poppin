<div class="col-md-4">
	<div class="card">
		<div class="card-header card-header-primary">
			<h4 class="card-title">{{@location.name}}</h4>
			<p class="address">{{@location.address.line1}} // {{@location.address.city}}, {{@location.address.state}}</p>
			<p><a href="javascript:void(0)" class="text-light" {{on "click" @startEdit}}>Edit</a></p>
		</div>
		<div class="card-body">
			<dl>
				<dt>Occupancy</dt>
				<dd>{{@location.crowdSize}}/{{@location.capacity}}</dd>
				<dt>Categories:</dt>
				{{#each @location.yelpDetails.categories as |category|}}
					<dd>{{category.title}}</dd>
				{{/each}}
				<dt>Hours:</dt>
				{{#each @location.hours as |hourset|}}
					<dd>
						<strong>{{hourset.day}}</strong>
						Open: {{if hourset.opening hourset.opening 'unset'}}
						<span class="text-muted">//</span>
						Close: {{if hourset.closing hourset.closing 'unset'}}
					</dd>
				{{/each}}
			</dl>
		</div>
	</div>
</div>

<div class="col-md-8">
	<div class="card">
		<div class="card-header card-header-primary">
			<h4 class="card-title">Yelp Details</h4>
		</div>
		<div class="card-body"> 
			<iframe style="width: 100%; height: 100vh;" src={{@location.yelpDetails.url}} />
		</div>
	</div>
</div>